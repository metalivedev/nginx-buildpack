#!/usr/bin/env bash

#Evaluate config to get $PORT
sed -e s/:LISTENPORT:/$PORT/g config/nginx.conf.template > config/nginx.conf

#Initialize log directory.
mkdir -p logs/nginx
touch logs/nginx/access.log logs/nginx/error.log

#Add something like this to supervisor to get tailing logs to stdout
# tail -qF -n 0 logs/nginx/*.log

#Start App Server
#by adding program to supervisord.conf

#Start NGINX
#We expect nginx to run in foreground.
#We also expect a socket to be at /tmp/nginx.socket.
echo 'buildpack=nginx at=nginx-start'
bin/nginx -p . -c config/nginx.conf

